<ul class="container border">
  <% post.comments.each do |comment| %>
    <li>
      <%= comment.user.name%>
      <%= comment.text %>
    </li>
    <div class="d-flex justify-content-end">
      <%= button_to "Delete comment", user_post_comment_path(post_id: post.id, id: comment.id), method: :delete, class:'btn btn-danger mx-2' if can? :destroy, comment%>
    </div>
  <% end %>
</ul>